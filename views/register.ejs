<%- include ('partials/header', { scripts: ['register.js'] }) %>

  <div class="row no-gutters flex-fill d-flex align-items-center justify-content-center" style="overflow-y: auto">
    <div class="col-4 card container" style="min-width:500px;">
      <form class="m-3" action="/register" method="POST">
        <h1 class="text-center">Create an account</h1>
        <div class="row">

          <div class="form-group col-5">
            <label for="username">First name</label>
            <input type="text" class="form-control" name="firstName" id="firstName" placeholder="John"
            value="<%= locals.error ? formData.firstName : ""%>"
            required>
          </div>

          <div class="form-group col-2">
            <label for="MI">MI</label>
            <input type="text" maxlength="1" class="form-control" name="MI" id="MI" placeholder="F"
            value="<%= locals.error ? formData.MI : ""%>">
          </div>

          <div class="form-group col-5">
            <label for="lastName">Last name</label>
            <input type="text" class="form-control" name="lastName" id="lastName" placeholder="Doe"
            value="<%= locals.error ? formData.lastName : ""%>"
            required>
          </div>
        </div>
        <div class="row">
          <div class="form-group col-6">
            <label for="username">Username</label>
            <input type="text" class="form-control" name="username" id="username" placeholder="johndoe" aria-describedby="taken"
            value="<%= locals.error ? formData.username : ""%>"
            required>
            <small id="taken" class="form-text text-danger ml-1">
              <%= (locals.error && locals.error == "taken") ? "Username is taken" : "" %>
            </small>
          </div>
          <div class="form-group col-6">
            <label for="phone">Phone number (optional)</label>
            <input input type="text" class="form-control" name="phone" id="phone" placeholder="(123)-456-7890"
            value="<%= locals.error ? formData.phone : ""%>">
          </div>
        </div>
        <div class="row">
          <div class="form-group col-6">
            <label for="email">Email address</label>
            <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp" placeholder="example@billy.com"
            value="<%= locals.error ? formData.email : ""%>"
            required>
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
          </div>

            <div class="form-group col-6">
              <label for="confirmEmail">Confirm email</label>
              <input type="email" class="form-control" name="confirmEmail" id="confirmEmail" placeholder="example@billy.com" aria-describedby="emailMismatch"
              value="<%= locals.error ? formData.confirmEmail : ""%>"
              required>
              <small id="emailMismatch" class="form-text text-danger ml-1">
                <%= (locals.error && locals.error == "emailMismatch") ? "Emails do not match" : "" %>
              </small>
            </div>
        </div>
        <div class="row">
          <div class="form-group col-6">
            <label for="password">Password</label>
            <input type="password" class="form-control" name="password" id="password" placeholder="Password"
            value="<%= locals.error ? formData.password : ""%>"
            aria-describedby="" required>
            <small id="insecurePassword" class="form-text text-danger ml-1" style="display: none">Password must be at least 8 characters long,
              contain at least one lowercase letter, one uppercase letter, one number, and one special character.
            </small>
          </div>
          <div class="form-group col-6">
            <label for="confirmPassword">Confirm password</label>
            <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" placeholder="Password" aria-describedby="passwordMismatch" required>
            <small id="passwordMismatch" class="form-text text-danger ml-1">
              <%= (locals.error && locals.error == "passwordMismatch") ? "Passwords do not match" : "" %>
            </small>
          </div>
        </div>
        <div class="form-check text-center">
          <input type="checkbox" class="form-check-input" name="terms" id="terms" required>
          <label class="form-check-label" for="terms">I agree to the <a href="/about/terms" target="_blank">terms and conditions</a></label>
        </div>
        <div class="d-flex justify-content-center">
          <button id="btnSubmit" type="submit" class="btn btn-primary my-3">Register</button>
        </div>
      </form>
      <a class="m-3 text-center" href="/login">Already have an account?</a>
    </div>
  </div>

<%- include ('partials/footer') %>
