<%- include ('partials/header') %>

  <div class="row no-gutters flex-fill d-flex align-items-center justify-content-center">
    <div class="card container" style="max-width:500px;">
      <form class="m-3" method="POST">
        <h1 class="text-center">Login</h1>
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" class="form-control" id="username" placeholder="Enter username">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" id="password" placeholder="Password">
        </div>
        <div class="d-flex justify-content-center">
          <button type="submit" class="btn btn-primary my-3">Login</button>
        </div>
      </form>
      <a class="m-3 text-center" href="/forgot">Forgot username or password?</a>
      <a class="m-3 text-center" href="/register">Don't have an account?</a>
    </div>
  </div>

<%- include ('partials/footer') %>
