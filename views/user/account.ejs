<%- include ('../partials/header', { scripts: ['user-profile.js'] }) %>
<div class="d-flex flex-fill" style="overflow-y: auto">
  <div class="container">
    <div class="jumbotron py-2">
      <h1 class="display-3">Account</h1>
      <hr class="my-4">

      <form class="m-3" action="/users/<%= session.user._id %>?_method=PUT" method="POST">

        <h3 class="display-6">User Info</h3>

        <div class="row">

          <div class="form-group col-5">
            <label for="firstName">First name</label>
            <input type="text" class="form-control" name="firstName" id="firstName"
            value="<%= locals.error ? formData.firstName : session.user.name.first %>"
            required>
          </div>

          <div class="form-group col-2">
            <label for="MI">MI</label>
            <input type="text" maxlength="1" class="form-control" name="MI" id="MI"
            value="<%= locals.error ? formData.MI : session.user.name.middle %>">
          </div>

          <div class="form-group col-5">
            <label for="lastName">Last name</label>
            <input type="text" class="form-control" name="lastName" id="lastName"
            value="<%= locals.error ? formData.lastName : session.user.name.last %>"
            required>
          </div>
        </div>
        <div class="row">
          <div class="form-group col-6">
            <label for="username">Username</label>
            <input type="text" class="form-control" name="username" id="username"
            value="<%= locals.error ? formData.username : session.user.username %>"
            aria-describedby="taken" required>
            <small id="taken" class="form-text text-danger ml-1">
              <%= (locals.error && locals.error == "taken") ? "Username is taken" : "" %>
            </small>
          </div>
          <div class="form-group col-6">
            <label for="phone">Phone number (optional)</label>
            <input input type="text" class="form-control" name="phone" id="phone"
            value="<%= locals.error ? formData.phone : session.user.phone_number %>" placeholder="(123)-456-7890">
          </div>
        </div>
        <div class="row">
          <div class="form-group col-6">
            <label for="email">Email address</label>
            <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp"
            value="<%= locals.error ? formData.email : session.user.email %>" required>
          </div>

        </div>
        <hr class="my-4">
        <h3 class="display-6">Password</h3>
        <div class="row">
          <div class="form-group col-6">
            <label for="oldPassword">Old Password</label>
            <input type="password" class="form-control" name="oldPassword" id="oldPassword" aria-describedby="invalid" placeholder="Password">
            <small id="invalid" class="form-text text-danger ml-1">
              <%= (locals.error && locals.error == "invalid") ? "Invalid password" : "" %>
            </small>
          </div>
        </div>
        <div class="row">
          <div class="form-group col-6">
            <label for="newPassword">New Password</label>
            <input type="password" class="form-control" name="newPassword" id="newPassword" placeholder="Password"
            value="<%= locals.error ? formData.newPassword : '' %>">
          </div>
          <div class="form-group col-6">
            <label for="confirmNewPassword">Confirm New Password</label>
            <input type="password" class="form-control" name="confirmNewPassword" id="confirmNewPassword" aria-describedby="mismatch" placeholder="Password">
            <small id="mismatch" class="form-text text-danger ml-1">
              <%= (locals.error && locals.error == "mismatch") ? "Passwords do not match" : "" %>
            </small>
          </div>
        </div>

        <div class="d-flex justify-content-between">
          <div class=""><button type="submit" class="btn btn-success btn-lg" aria-describedby="success">Update</button></div>
          <div class=""></div>
          <div class=""><button type="button" class="btn btn-danger">Delete User</button></div>
        </div>
        <medium id="success" class="form-text text-success ml-1">
          <%= locals.ack ? "Success" : "" %>
        </medium>
      </form>

    </div>
  </div>
</div>
<%- include ('../partials/footer') %>
